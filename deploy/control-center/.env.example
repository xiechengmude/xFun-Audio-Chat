# PDF-AI Control Center Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Required Configuration
# ===========================================

# RunPod API Key (get from https://runpod.io/console/user/settings)
RUNPOD_API_KEY=your_runpod_api_key_here

# ===========================================
# Optional Configuration
# ===========================================

# Default GPU type for deployments
# Options: H100, A100, A100-40, A40, RTX4090, RTX3090
DEFAULT_GPU=A40

# vLLM Server port (internal, on RunPod pod)
VLLM_PORT=8000

# PDF API Server port (external, on RunPod pod)
API_PORT=8006

# SSH Key path for RunPod connection
# Default: ~/.ssh (mounted read-only)
SSH_KEY_PATH=~/.ssh

# API Gateway port (control center)
API_GATEWAY_PORT=8080

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# ===========================================
# Nginx Configuration (optional, use --profile with-nginx)
# ===========================================

# HTTP port for Nginx
NGINX_HTTP_PORT=80

# HTTPS port for Nginx
NGINX_HTTPS_PORT=443
